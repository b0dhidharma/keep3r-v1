{
  "name": "keep3r-v1",
  "version": "1.0.0",
  "description": "Hardhat repository for keep3r v1",
  "keywords": [
    "ethereum",
    "smart",
    "contracts",
    "test",
    "solidity",
    "hardhat",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b0dhidharma/keep3r-v1.git"
  },
  "contributors": [
    {
      "name": "b0dhidharma",
      "url": "https://github.com/b0dhidharma"
    }
  ],
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat deploy",
    "sizer": "TEST=true hardhat compile && TEST=true npx hardhat size-contracts",
    "coverage": "npx hardhat coverage",
    "fork": "FORK=true npx hardhat node",
    "fork:script": "FORK=true npx hardhat run",
    "fork:test": "FORK=true npx hardhat test",
    "lint:check": "solhint 'contracts/**/*.sol' 'interfaces/**/*.sol' && prettier --check './**'",
    "lint:fix": "sort-package-json && prettier --write './**' && solhint --fix 'contracts/**/*.sol' 'interfaces/**/*.sol'",
    "release": "standard-version",
    "test": "TEST=true hardhat compile && TEST=true mocha",
    "test:parallel": "TEST=true hardhat compile && TEST=true mocha --parallel",
    "test:all": "yarn test './test/integration/**/*.spec.ts' 'test/unit/**/*.spec.ts'",
    "test:all:parallel": "yarn test:parallel './test/integration/**/*.spec.ts' 'test/unit/**/*.spec.ts'",
    "test:integration": "yarn test ./test/integration/**/*.spec.ts",
    "test:integration:parallel": "yarn test:parallel ./test/integration/**/*.spec.ts",
    "test:gas": "TEST=true REPORT_GAS=1 npx hardhat test",
    "test:unit": "yarn test 'test/unit/**/*.spec.ts'",
    "test:unit:parallel": "yarn test:parallel 'test/unit/**/*.spec.ts'",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.3.1",
    "@uniswap/v3-core": "b0dhidharma/uniswap-v3-core",
    "@uniswap/v3-periphery": "b0dhidharma/uniswap-v3-periphery"
  },
  "devDependencies": {
    "@codechecks/client": "0.1.11",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@defi-wonderland/smock": "^2.0.3",
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.10",
    "@nomiclabs/hardhat-etherscan": "2.1.6",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "7.0.1",
    "@typechain/hardhat": "2.3.0",
    "@types/chai": "4.2.21",
    "@types/chai-as-promised": "7.1.4",
    "@types/lodash": "4.14.172",
    "@types/mocha": "9.0.0",
    "@types/node": "16.9.1",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "aws-sdk": "2.987.0",
    "axios": "0.21.4",
    "axios-retry": "^3.1.9",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.4.6",
    "hardhat": "2.6.4",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-preprocessor": "0.1.4",
    "husky": "7.0.2",
    "lodash": "4.17.21",
    "mocha": "9.1.1",
    "moment": "2.29.1",
    "pinst": "2.1.6",
    "prettier": "2.4.0",
    "prettier-plugin-solidity": "1.0.0-beta.18",
    "solc-0.8": "npm:solc@0.8.7",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.17",
    "solidity-docgen": "0.5.13",
    "sort-package-json": "1.51.0",
    "standard-version": "9.3.1",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "typechain": "5.1.2",
    "typescript": "4.4.3"
  }
}
